@page
@model CITUCrate.Pages.Seller.AccountManagementModel
@{
    Layout = "_SellerLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="~/css/accountmanagement.css" />
</head>
<body>
    <h1>User Management</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Balance</th>
                <th>Is Buyer</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users != null && Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Balance.ToString("F2")</td>
                        <td>@(user.isBuyer == 1 ? "Yes" : "No")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align: center;">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
